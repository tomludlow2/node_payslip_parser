<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>View Pending Payslips</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"> <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="/path/to/your/custom.css"> <!-- Link to custom CSS if needed -->
  <!-- Other head content -->
</head>
<body>
  <!-- Navigation Bar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
    <a class="navbar-brand" href="/dashboard">Dashboard</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/upload">Upload Payslip</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/view_pending_payslips">View Pending Payslips</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/view_users">View Users</a>
        </li>
      </ul>
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link btn btn-danger text-white" href="/logout">Logout</a>
        </li>
      </ul>
    </div>
  </nav>

  <div class="container">
    <h2 class="mb-4">Pending Payslips</h2>

    <% if (messages.error && messages.error.length > 0) { %>
      <div class="alert alert-danger">
        <%= messages.error %>
      </div>
    <% } %>

    <% if (messages.success && messages.success.length > 0) { %>
      <div class="alert alert-success">
        <%= messages.success %>
      </div>
    <% } %>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">File Name</th>
          <th scope="col">Created At</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% files.forEach(file => { %>
          <tr>
            <td><%= file.name %></td>
            <td><%= formatDate(file.createdAt) %></td> <!-- Display formatted creation timestamp -->
            <td>
              <!-- Process Payslip Form -->
              <form action="/process_payslip" method="POST" style="display:inline-block;">
                <input type="hidden" name="filename" value="<%= file.name %>">
                <button type="submit" class="btn btn-primary">Process Payslip</button>
              </form>
              <!-- Delete Payslip Form -->
              <form action="/delete-payslip" method="POST" style="display:inline-block;">
                <input type="hidden" name="filename" value="<%= file.name %>">
                <button type="submit" class="btn btn-danger ml-2">
                  <i class="fas fa-trash"></i> <!-- Bin icon -->
                </button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@uppy/core"></script>
  <script src="https://cdn.jsdelivr.net/npm/@uppy/drag-drop"></script>
</body>
</html>
